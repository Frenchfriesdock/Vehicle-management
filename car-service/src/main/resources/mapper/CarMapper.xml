<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.hosiky.car.mapper.CarMapper">

    <select id="pageQuery" resultType="com.hosiky.car.domain.po.Car">
        select * from car
        <where>
            <if test="typeId != null">
                typeId = #{typeId}
            </if>

            <if test="state != null">
                and  state = #{state}
            </if>
        </where>
    </select>

</mapper>